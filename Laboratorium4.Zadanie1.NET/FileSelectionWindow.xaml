<Window x:Class="Laboratorium4.Zadanie1.NET.FileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a File" Height="400" Width="300">
    <Grid>
        <ListBox Name="FilesListBox" Margin="10" SelectionMode="Extended" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Name="SelectFileButton" Content="Select" Click="SelectFileButton_Click" Margin="5" />
            <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>